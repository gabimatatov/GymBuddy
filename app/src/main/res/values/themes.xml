<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (No Action Bar) -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Disable default Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color (Sets Toolbar color) -->
        <item name="colorPrimary">@color/light_blue_dark</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_blue_light</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Enable Fullscreen Mode -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash Screen Theme (No Action Bar, Fullscreen) -->
    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Use the same color for consistency -->
        <item name="colorPrimary">@color/light_blue_dark</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>
